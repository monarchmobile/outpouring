<p id="notice"><%= notice %></p>

<h1><%= @article.title %></h1>

<p>
  <%= @article.body %>
</p>

<p>Tags:
  <% @article.tags.each do |tag|%>
  <%= tag.name %>
  <% end %>
</p>


<%= link_to 'Edit |', edit_article_path(@article) if can? :update, @article %>
<%= link_to 'Back', articles_path %>

<h2>Comments</h2>
<%= render :partial => @article.comments %>
<%= render 'comments/form' %>
