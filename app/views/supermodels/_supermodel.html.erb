<%= content_tag_for :li, supermodel do %>
	<ul class="instance_detail">
		<%= content_tag :li, supermodel.name, class:"title"  %>
		<%= form_for supermodel, class: "supermodel_ajax_edit", :url => {controller:  "supermodels", action: "model_status", id: supermodel.id }, remote: true do |a| %>
			<%= a.check_box :visible, class: "supermodels_status_checkbox", id: "supermodel#{supermodel.id}" %>
		<% end %>
		
		<ul class="crud_buttons">
			<%= content_tag :li, link_to("edit", edit_supermodel_path(supermodel)) %>
			<%= content_tag :li, link_to("view", supermodel_path(supermodel)) %>
			
		</ul>
		
	</ul>
	<br class="clear">
<% end %>
