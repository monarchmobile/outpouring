<%= form_for @role do |f| %> 
	<%= render 'shared/errors', object: @role %> 
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>


<% end %>