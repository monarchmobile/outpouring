<%= form_for @contact do |f| %>
	<%= render 'shared/errors', object: @contact %>
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :address %>
		<%= f.text_field :address %>
	</div>
	<div class="field">
		<%= f.label :phone %>
		<%= f.text_field :phone %>
	</div>
	<div class="field">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :fax %>
		<%= f.text_field :fax %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>




