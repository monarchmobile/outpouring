<%= form_for @page do |f| %> 
	<%= render 'shared/errors', object: @page %> 
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :content %>
		<%= f.text_area :content, :class => 'ckeditor' %>
	</div>
	<div class="field">
		<%= f.label :published %>
		<%= f.check_box :published %>
	</div>
	<div class="field">
		<%= f.label :index %>
		<%= f.select(:index, 1..Page.all.count, { prompt: true } )%>
	</div>
	<div class="field">
	  	<%= f.label :links %><br />
	    <% @links.each do |link| %>
	      <%= check_box_tag "page[link_ids][]", link.id, @page.links.include?(link) %>  
	      <%= link.location %>  
	    <% end %>
	</div>
	   
	<div class="actions">
		<%= f.submit %>
	</div>


<% end %>