<%= form_for @page do |f| %> 
	<%= render 'shared/errors', object: @page %> 
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :content %>
		<%= f.text_area :content, :class => 'ckeditor' %>
	</div>
	<div class="field">
		<%= f.label :published %>
		<%= f.check_box :published %>
	</div>
	<div class="field">
		<%= f.label :index %>
		<%= f.select(:index, 1..Page.all.count, { prompt: true } )%>
	</div>
	<%= f.fields_for :links do |builder| %>
		<div class="field">
			<%= builder.label :top_link %>
			<%= builder.check_box :top_link %>
		</div>
		<div class="field">
			<%= builder.label :side_link %>
			<%= builder.check_box :side_link %>
		</div>
		<div class="field">
			<%= builder.label :top_link %>
			<%= builder.check_box :top_link %>
		</div>

	<% end %>
	
	<div class="actions">
		<%= f.submit %>
	</div>


<% end %>